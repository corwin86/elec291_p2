<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elec291.connectfour.ChoosePlayerMode"

    android:background="#8cd1b9">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:id="@+id/buttonSinglePlayer"
        android:background="#ff5238"
        android:textColor="#FFF"
        android:layout_above="@+id/buttonMultiPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Player Mode"
        android:textSize="36sp"
        android:typeface="monospace"
        android:textColor="#FFF"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Player"
        android:id="@+id/buttonMultiPlayer"
        android:background="#ff5238"
        android:textColor="#FFF"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff5238"
        android:text="AI against AI"
        android:id="@+id/ButtonAIPlayer"
        android:textColor="#FFF"

        android:layout_marginTop="74dp"
        android:layout_alignTop="@+id/buttonMultiPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonMultiPlayer"
        android:layout_alignEnd="@+id/buttonMultiPlayer" />

</RelativeLayout>
