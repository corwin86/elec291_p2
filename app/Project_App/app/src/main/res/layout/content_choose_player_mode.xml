<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elec291.connectfour.ChoosePlayerMode"

    android:background="#8cd1b9">
    <!--tools:context="com.example.elec291.connectfour.ChoosePlayerMode"-->
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--tools:showIn="@layout/activity_choose_player_mode">-->



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:id="@+id/buttonSinglePlayer"
        android:layout_above="@+id/buttonMultiPlayer"
        android:layout_alignParentRight="true"
        android:background="#ff5238"
        android:textColor="#FFF"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>
        <!--android:layout_below="@+id/view"-->
        <!--android:layout_alignRight="@+id/choosePlayer"-->
        <!--android:layout_alignEnd="@+id/choosePlayer"-->
        <!--android:layout_alignLeft="@+id/choosePlayer"-->
        <!--android:layout_alignStart="@+id/choosePlayer" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Player Mode"
        android:textSize="36sp"
        android:typeface="monospace"
        android:textColor="#FFF"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_above="@+id/buttonSinglePlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Player"
        android:id="@+id/buttonMultiPlayer"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#ff5238"
        android:layout_alignParentStart="true"
        android:textColor="#FFF"

        android:layout_alignRight="@+id/buttonSinglePlayer"
        android:layout_alignEnd="@+id/buttonSinglePlayer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff5238"
        android:text="AI against AI"
        android:id="@+id/ButtonAIPlayer"
        android:layout_below="@+id/buttonMultiPlayer"
        android:textColor="#FFF"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonMultiPlayer"
        android:layout_alignEnd="@+id/buttonMultiPlayer" />

</RelativeLayout>
